#wrapper {height: 100%; width: 100%; padding:0; display:block; overflow: scroll; position: fixed}
#inner-wrapper {display: block; margin: 10px;}
.sleeve {margin: 20px;}

.inner {margin: 20px;}

/* toggle match day */

div#match-day {
height: 40px; width: 20%; background: rgba(0,0,0,.8); display: block; position: fixed; left: 10%; right: 10%; top: 0;/*to be changed to :none */z-index:9999; -webkit-transition: width 1s ease-in-out;

  // -webkit-transition: height .5s ease-out-in;
  // -moz-transition: height .5s ease-out-in;
  // -o-transition: height .5s ease-out-in;
  // transition: height .5s ease-out-in;

  -webkit-box-shadow: 1px 1px 5px black;

   section#highlights {position: absolute; top: 20px; left: 20px; display:none}

}


div#match-day:hover {
  height: 100%; max-height: 600px; width: 80%;

  -webkit-transition: height .5s ease-out-in;
  -moz-transition: height .5s ease-out-in;
  -o-transition: height .5s ease-out-in;
  transition: height .5s ease-out-in;


   section#highlights {position: relative; background: red; height: 200px; width:300px;}

}


#utility-bar {
	height: auto; width: 100%; display: block; 

	#upper {height: 40px; width:100%;
		ul { display: block; text-align: right;}
	}
	#lower {background: $bg-color; height: 60px; width: 100%;
		ul li a {font-size: 1.5em;}
	}
}



/* toggle header */
details {background: 0; }
details summary h5 {color: #FFF;width: auto; display:inline}

#banner {height: auto; display: block; position: relative; background: 0; width:100%;

	#greeting-block-wide, #greeting-block-narrow {display:inline-block; float: left;margin: 0px;  position: relative; background:0; 
		h1 {font-size: 80px;}
		h1,h2,h3,h4 { margin:0 20px}
	}
	#greeting-block-wide {width: 65%;}

	#greeting-block-narrow {width: 35%;}
	
	#twitter, #calendar-today, #calendar-upcoming {height: 250px; display: inline-block; background: red; position: relative; padding:0;}

	#twitter {width: 35%}

	#calendar-today {background: orange; width: 40%; float: left}
	#calendar-upcoming {background: orange; width: 20%; float: left}
}



section#my-news, section#my-kid  {height: 400px; float: left; display: inline-block;position: relative; background: $bg-main; clear:both;
}

 section#my-news {width: 65%;}
 section#my-kid {width: 35%;}


section#my-leagues,section#my-community {height: 400px;  width:35%; display: inline-block;position: relative; background: #1f9fff; overflow: auto;}
section#my-community {width: 65%;}



section#my-videos {height: 200px;  width: 100%; display: inline-block; position: relative; background: silver; clear:both}


.my-videos {float: left;  height: 200px; width: 300px; background: #262626; position: absolute; top: 20; right: 20; display: block;}





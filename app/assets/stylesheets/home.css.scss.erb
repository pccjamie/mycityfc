
$bg-color: rgba(135, 169, 181, 0.85);
$bg-main: rgba(135, 169, 181, 0.85);
$header-bg: rgba(255,255,255,.8);
$header-text: black;

body {height: 100%; width:100%; display: block;  background-image: url('history1.jpg') }
body.bg-default {background-image: url('history1.jpg') }
body.bg-slides {background: transparent;}
body.bg-parent-profiles { 
	position: fixed;
	background-image: url('kids1.jpg');
	background-size: 100%;
	background-repeat: none;
}
body.bg-fan-profiles {
	position: fixed;
	background-color: gray;
	background-image: url('nyc.jpg');
	background-size: 100%;
	background-repeat: none;
}

ul {list-style: none}
li {display: inline; padding: 5px}

h1,h2,h3,h4,h5,p,a,li {color: #FFF; font-family: 'BenchNine', sans-serif; text-transform: uppercase; letter-spacing: 1px; font-weight: normal}

.app-name {font-size: 200%; color: #262626; text-shadow: none; letter-spacing: 1px;}

h1#logo {height:1px;margin-left:-10000px;position: relative;}

table {display: block; position: relative;}


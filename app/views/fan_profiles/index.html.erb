<%= render 'gameday' %>
<header id="banner">
	<%= render 'game_previews' %>
	<%= render 'news_ticker' %>
</header>
<div id="profile">
	<h3 class="">Latest from YouTube</h3>

	<section id="videos">
		<div class="sleeve">
	
		<div class="cycle-control prev">
			<a href=# id="prev" class="reload-prev"><</a>
		</div>
		<div class="cycle-control next">
			<a href=# id="next" class="reload-next">></a>
		</div>

	  <%#= @yt_team %>
	  <%#= @primary_team %>
	  <!--replace later with current_user.primary_team-->
		<%#= @yt_username %>

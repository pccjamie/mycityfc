 -->		<!-- <p class="notice"><%#= notice %></p> -->

		<div class="cycle-slideshow"	
			data-cycle-timeout=0
			data-cycle-prev=#prev
			data-cycle-next=#next
			data-cycle-slides=">.video-slide"
			data-cycle-youtube=true
			data-cycle-youtube-autostart=false
			data-cycle-youtube-autostop=true 
			>

<% @video_ids.each do |v| %>
<iframe id="player" class="video-slide" type="text/html" width="600" height="375"
src="http://www.youtube.com/embed/<%= v %>?enablejsapi=1"
frameborder="0"></iframe>
<% end %>

		</div>
	
	</div>
</section>
<section id="fans">
	<div class="sleeve">
	<header><h3>New Fan?</h3></header>	
	<aside>
		<div class="venues"><header><h4>WHERE TO WATCH <%= @my_team %><%#=current_user.city %></h4></header><span class="pending">Yelp API integration pending.</div>
		<div class="social"><header><h4>FOLLOW TEAM?</h4></header><span class="pending">Twitter / FB API integration pending</span>
		</div>
	</aside>

	</div>
</section>

<section id="schedule-results">
<div class="sleeve">
<header><h3>Previous Results</h3></header>
<%= render 'schedule' %>
</div>
</section>

</div> 

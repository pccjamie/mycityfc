<% if user_signed_in? && current_user %>
<ul>
  <li>Hi,</li>
  <li><%= current_user.first_name %></li>
  <li class="current-user-city"><%#= current_user.city %></li>
  <li><%= image_tag current_user.picture %></li>
  <li><%= link_to "Sign Out", destroy_user_session_path %></li>
</ul>

<% else %>

<ul>
  <li>Log In:</li>      
  <%#= link_to "Sign In", new_user_session_path %>
  <li><%= link_to image_tag('https://www.facebookbrand.com/img/assets/asset.facebook.logo.lg.png'), user_omniauth_authorize_path(:facebook)%></li>
</ul>
<%end%>


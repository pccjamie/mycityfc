<%= form_for :slide, url: {action: "create"}, html: {id: "slides"} do |f| %>

<%= f.label :name %>

<%= f.text_field :name %>
<%= f.label :desc %>

<%= f.text_area :desc %>
<%= f.label :data_url %>

<%= f.url_field :data_url %> 
<%= f.label :cite %>
<%= f.text_field :cite %>
<%= f.submit "Add Slide" %>
<% end %>